<% if @book.errors.any? %>
  <%= @book.errors.count %><strong>errors prohibited this obj from being saved:</strong><br>
  <% @book.errors.full_messages.each do |message| %>
    <div class="form-error">
      <%= message %>
    </div>
  <% end %>
<% end %>

  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>

        <% if @book.image.attached? %>
          <%= image_tag book.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>

        <%= render 'list',book: @book %>

        <h2 class="mt-3">New book</h2>
          <%= form_with model:@book, url:books_path, method: :post do |f| %>
            <h4>Title</h4>
              <%= f.text_field :title %>
            <h4>Opinion</h4>
              <%= f.text_area :body %>
              <%= f.submit 'Create Book' %>
          <% end %>
      </div>
          <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
              </tr>
            </thead>

            <% @books.each do |book| %>
            <tbody>
              <tr>
                <td>
                  <% if @book.image.attached? %>
                    <%= image_tag book.image, size: "100x100" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "100x100" %>
                  <% end %>
                </td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
                  <% end %>
            </tbody>
          </table>
    </div>
  </div>